---
- hosts: appServers
  gather_facts: false
  become: true
  tasks:
  
  - name: install wget
    apt:
     name: wget
     state: present

  - name: install openjdk
    apt:
     name: openjdk-11-jdk
     state: present
    
  - name: download jenkins.repo
    get_url:
     url:  https://pkg.jenkins.io/debian-stable binary/ 
     dest: /etc/apt/sources.list.d/jenkins.list
  
  - name: Change ownership to jenkins User.
    file:
      path: /etc/apt/sources.list.d/jenkins.list
      owner: jenkins
      group: jenkins
      mode: "u+rwx,g+rx,o=rx"
      recurse: yes
      
  - name: import jenkins key
    rpm_key:
     state: present
     key: https://pkg.jenkins.io/debian-stable/jenkins.io-2023.key #Get latest ket at: https://pkg.jenkins.io/redhat-stable/
    
  - name: Apt-get Update
    apt:
      update_cache: true
  
  - name: install jenkins
    apt:
     name: jenkins
     state: present
   
   - name: enable jenkins
    systemd:
     name: jenkins
     enabled: yes
   
  - name: start jenkins
    systemd:
     name: jenkins
     state: started
     
  - name: sleep for 30 seconds and continue with play
    wait_for: 
     delay: 30
     port: 8080
    
  - name: init password jenkin
    shell: cat /var/lib/jenkins/secrets/initialAdminPassword
    changed_when: false
    register: result
    
  - name: print init password jenkins
    debug:
     var: result.stdout
     
     
     ---
     - hosts: jenkins
       become: true
       tasks:
       - name: Change ownership to jenkins User. 
         file:
           path: /etc/yum.repos.d/jenkins.repo
           owner: jenkins
           group: jenkins
           mode: "u+rwx,g+rx,o=rx"
           recurse: yes
       - name: install jenkins
         yum:
           name: jenkins
           state: present
   
       - name: enable jenkins
         systemd:
           name: jenkins
           enabled: true
   
        - name: start jenkins
          systemd:
            name: jenkins
            state: started
     
        - name: sleep for 30 seconds and continue with play
          wait_for: 
            delay: 30
            port: 8080
    
        - name: init password jenkin
          shell: cat /var/lib/jenkins/secrets/initialAdminPassword
          changed_when: false
          register: result
    
        - name: print init password jenkins
          debug:
            var: result.stdout
